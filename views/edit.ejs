<%- include('partials/header') -%>
<div class="container mt-5 w-50">

    <h2 class="mb-4">Update Employee Data</h2>
        <form action="/edit/<%= employee.id%>?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <input type="text" class="form-control" value="<%= employee.name%>" name="_method" placeholder="Employee Name">
            <input type="text" value="<%= employee.designation%>" name="name" class="form-control" placeholder="Employee Designation">
            <input type="text" value="<%= employee.salary%>" class="form-control" placeholder="Employee Salary" name="salary">

            <button class="btn btn-danger btn-block mt-3">Update Employee</button>
        </form>
    
</div>
<%- include('partials/footer') -%>